<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300" prefWidth="400" style="-fx-background-color: skyblue;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainApplication.loginController">
    <children>
        <Label layoutX="140.0" layoutY="30.0" text="Login" textFill="#2a2a2a">
            <font>
                <Font name="Copperplate Gothic Light" size="27.0" />
            </font>
        </Label>
        
        <Label layoutX="70.0" layoutY="100.0" text="Username:" />
        <TextField fx:id="usernameField" layoutX="150.0" layoutY="95.0" prefWidth="180.0" />
        
        <Label layoutX="70.0" layoutY="150.0" text="Password:" />
        <PasswordField fx:id="passwordField" layoutX="150.0" layoutY="145.0" prefWidth="180.0" />
        
        <Button fx:id="loginButton" layoutX="162.0" layoutY="231.0" onAction="#loginButtonClicked" prefHeight="26.0" prefWidth="94.0" text="Login" />
      <Label layoutX="150.0" layoutY="183.0" prefHeight="18.0" prefWidth="134.0" text="If you're New please" />
      <Button fx:id="registerButton" layoutX="258.0" layoutY="179.0" mnemonicParsing="false" onAction="#registerButtonClicked" prefHeight="26.0" prefWidth="59.0" style="-fx-background-color: skyblue;" text="Register" />
    </children>
</AnchorPane>
